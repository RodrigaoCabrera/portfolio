---
import SectionTitle from "./SectionTitle.astro";
import Badge from "./Badge.astro";
import getTechnologies from "../libs/get-technologies";
const skills = [
  "HTML5",
  "CSS3",
  "JavaScript",
  "ReactJs",
  "Typescript",
  "GraphQl",
];

const technologies = await getTechnologies();
---

<article>
  <SectionTitle title="Skills" />
  <section>
    {technologies.data.map((tecnology) => <Badge text={tecnology.name} size="medium" />)}
  </section>
</article>

<style>
  article {
    padding: 16px 0 12px;
  }

  h2 {
    font: var(--h2);
    color: var(--dark-color);
    margin: 0 0 8px;
  }
  section {
    display: flex;
    gap: 0 12px;
    padding: 12px 0;
    overflow-x: auto;
    scroll-snap-type: x mandatory;
    overscroll-behavior-x: contain;
  }
</style>
