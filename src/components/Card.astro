---
interface Props {
  image: string;
  title: string;
}

const { image, title }: Props = Astro.props;
---

<article>
  <div class="imageContainer">
    <img src={image} alt="portfolio personal" loading="lazy" />
  </div>
  <p>{title}</p>
</article>

<style>
  .imageContainer {
    aspect-ratio: 1 / 1;
    width: fit-content;
    height: fit-content;
  }
  img {
    width: 100%;
    height: 100%;
  }
  p {
    font: var(--xl-medium);
    color: var(--dark-color);
    margin: 0 0 8px;
  }
</style>
