---
import { Image } from "astro:assets";
interface Props {
  id: number;
  image: ImageMetadata;
  title: string;
  type?: string;
}

const { image, title, id }: Props = Astro.props;
---

<a href=`/${id}`>
  <article>
    <div class="imageContainer">
      <Image
        width={173}
        height={173}
        src={image}
        alt="portfolio personal"
        loading="lazy"
        transition:name=`project-image-${id}`
      />
    </div>
    <p>{title}</p>
  </article>
</a>

<style>
  a {
    text-decoration: none;
    z-index: -1;
  }
  .imageContainer {
    width: fit-content;
    height: fit-content;
  }
  img {
    width: 100%;
    height: 100%;
    aspect-ratio: 1 / 1;
  }
  p {
    font: var(--xl-medium);
    color: var(--dark-color);
    margin: 0 0 8px;
  }
</style>
