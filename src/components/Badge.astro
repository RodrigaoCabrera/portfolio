---
interface Props {
  text: string;
  mode: string;
}
const { text, mode }: Props = Astro.props;
---

<span class={mode}>{text}</span>

<style>
  span {
    display: inline-block;
    background-color: var(--accent);
    border-radius: var(--secondary-border-radius);
    color: var(--dark-color);
    scroll-snap-align: start;
  }
  span.large {
    padding: 5px 16px;
    font: var(--l-medium);
  }
  span.mini {
    padding: 3px 8px;
    font: var(--s-medium);
    border-radius: 5px;
  }
</style>
