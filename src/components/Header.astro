---
import ArrowIcon from "../icons/ArrowIcon.astro";
interface Props {
  text: string;
  animate: boolean;
}

const { text, animate = false }: Props = Astro.props;
---

<header id="home">
  <section class=`${animate ? 'animation' : ''}`>
    {
      !animate && (
        <a href="/#projects">
          <ArrowIcon
            width="24"
            height="24"
            stroke="currentColor"
            color="#0d141c"
            fill="none"
          />
        </a>
      )
    }
    <h2>{text}</h2>
    {animate && <h3>Frontend Developer</h3>}
  </section>
</header>

<style>
  header {
    height: 54px;
    position: relative;
  }
  header a {
    border-radius: var(--border-radius);
    position: absolute;
    z-index: 101;
    left: 6px;
    height: calc(100% - 10px);
    width: 50px;
    margin: 5px 0;
    display: flex;
    justify-content: center;
    align-items: center;

    svg {
      rotate: 90deg;
    }
  }

  header a:hover {
    background-color: var(--accent);
    border-radius: var(--border-radius);
  }

  section {
    position: fixed;
    top: 0;
    width: 100%;
    height: 54px;
    z-index: 100;
    overflow: hidden;
    background-color: var(--primary-color);
  }
  section.animation {
    animation: enhance-header linear both;
    animation-timeline: scroll(root);
    animation-range: 0 54px;
  }
  h2,
  h3 {
    font: var(--h2);
    color: var(--dark-color);
    margin: 0;
    text-align: center;
    padding: 16px;
    line-height: 16px;
  }
  section.animation h2 {
    animation: reduce-title linear both;
    animation-timeline: scroll(root);
    animation-range: 150px 200px;
  }

  h3 {
    font: var(--l-bold);
    padding: 0 0 16px;
    animation: appearence-title linear both;
    transform: translateY(20px);
    animation-timeline: scroll(root);
    animation-range: 150px 200px;
  }

  @keyframes enhance-header {
    to {
      box-shadow: 0 0 19px -9px rgba(0, 0, 0, 0.2);
    }
  }
  @keyframes reduce-title {
    to {
      scale: 50%;
      padding: 13px 0 0;
    }
  }
  @keyframes appearence-title {
    to {
      transform: translateY(0);
      padding: 0;
      line-height: 10px;
    }
  }

  /* DESKTOP */
  @media (min-width: 768px) {
    section :is(h2, h3) {
    }

    section.animation h2 {
      opacity: 0;
      animation: fade-in linear both;
      animation-timeline: scroll(root);
      animation-range: 50px 200px;
    }

    @keyframes fade-in {
      to {
        opacity: 1;
        scale: 50%;
        padding: 13px 0 0;
      }
    }
  }
</style>
