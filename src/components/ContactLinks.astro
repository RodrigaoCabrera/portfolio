---
interface Props {
  link: string;
  user: string;
  socialNetworkName: string;
  email: string | null;
}

const { link, user, socialNetworkName, email }: Props = Astro.props;
---

<a href={link} target="_blank" rel="noopener noreferrer">
  <section>
    <div class="conectLinksIcon">
      <slot />
    </div>
    <div class="conectLinksContent">
      <h3>{email || user}</h3>
      <p>{socialNetworkName}</p>
    </div>
    <div class="conectLinksDot"></div>
  </section>
</a>

<style>
  a {
    text-decoration: none;
    color: initial;
  }
  section {
    display: flex;
    gap: 0 16px;
    align-items: start;
    padding: 12px 0;
    align-items: center;
  }

  .conectLinksIcon {
    background-color: var(--accent);
    padding: 12px;
    border-radius: var(--secondary-border-radius);
    display: flex;
  }

  h3 {
    font: var(--xl-medium);
    color: var(--dark-color);
    margin: 0;
  }
  p {
    font: var(--l-regular);
    color: var(--secondary-color);
    margin: 0;
  }
</style>
